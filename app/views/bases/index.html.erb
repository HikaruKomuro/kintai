<% provide(:title, "拠点一覧") %>

<h1>拠点一覧</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th>拠点番号</th>
      <th>拠点名</th>
      <th>勤怠種類</th>
    </tr>
  </thead>
  <tbody>
    <% @bases.each do |b| %>
    <tr>
      <td><%= link_to "修正", "#", class: "btn btn-primary" %></td>
      <td><%= link_to "削除", "#", data: { confirm: "削除してもよろしいですか？" }, class: "btn btn-primary" %></td>
      <td><%= b.base_number %></td>
      <td><%= b.base_name %></td>
      <td><%= b.work_type %></td>
    </tr> 
    <% end %>
  </tbody>
</table>
<a class="btn btn-lg btn-primary" href="#collapse" data-toggle="collapse" 
  role="button" aria-expanded="false" aria-controls="collapse">拠点情報追加</a>
  
<div class="collapse" id="collapse">
  <%= form_with(scope: :base, url: bases_path, local:true, method: :post) do |f| %>
  <%= f.label :base_number, class: "label-form" %>
  <%= f.number_field :base_number, class: "form-control" %>
  <%= f.label :base_name, class: "label-form" %>
  <%= f.text_field :base_name, class: "form-control" %>
  <%= f.label :work_type, class: "label-form" %>
  <%= f.text_field :work_type, class: "form-control" %>
  <%= f.submit "拠点情報追加", class: "btn btn-primary btn-lg" %>
  <% end %>
</div>

      