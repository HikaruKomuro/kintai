<%= provide(:title, @user.name) %>

<h1><%= @user.name %></h1>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <th class="center"> 
        <% if current_user?(@user) %>
          <%= link_to "←", user_path(date: @first_day.prev_month), class: "btn btn-default" %>
        <% end %>
        <%= l(@first_day, format: :middle) %>  時間管理表
        <% if current_user?(@user) %>
          <%= link_to "→", user_path(date: @first_day.next_month), class: "btn btn-default" %>
        <% end %>
      </th>
      <th class="center">指定勤務開始時間　：　<%= format_basic_info(@user.work_time) %><br>
                         指定勤務終了時間　：　<%= format_basic_info(@user.work_time) %></th>
      <th colspan="3", class="center">基本時間　：　<%= format_basic_info(@user.basic_time) %></th>
      <th class="center">初日 : <%= l(@first_day, format: :short) %></th>
    </tr>
    <tr>
      <th class="center">所属 : <%= @user.department.present? ? @user.department : "未公開" %></th>
      <th class="center">名前 : <%= @user.name %></th>
      <th>コード</th>
      <th><%= %></th>
      <th class="center">出席日数：<%= @worked_sum %>日</th>
      <th class="center">締め : <%= l(@last_day, format: :short) %></th>
    </tr>
  </table>
</div>

<% if current_user?(@user) %>
  <% if superior_user? %>
    <% if @user.requests.where(category: 1).count >= 1 %>
      <a data-toggle="modal" href="#modalsuperior"><font color="red">【所属長承認申請のお知らせ】<span class="border1"><%= @requests.count %>件の通知があります</span></font></a><br>
    <% else %>
      <a data-toggle="modal" href="#modalsuperior">【所属長承認申請のお知らせ】</a><br>
    <% end %>
    
    
    <div class="modal" id="modalsuperior" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-daialog container">
        <div class="modal-content">
          <button type="button" class="close" data-dismiss="modal" aria-label="close"><span aria-hidden="true">&times;</span></button>
          <div class="modal-body">
            
            <%= form_with(url: request_path, method: :delete, local: true) do |f| %>
            <% @applied_users.each do |au| %>
            <h3 class="center">【<%= User.find(au).name %>からの１カ月分勤怠申請】</h3>
            <table class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th class="center">月</th>
                  <th class="center">指示者確認印</th>
                  <th class="center">変更</th>
                  <th class="center">勤怠を確認する</th>
                </tr>
              </thead>
              <tbody>
                <% @requests.each do |a| %>
                <tr>
                  <td class="center"><%= a.request_month.month %>月</td>
                  <td>
                    <%= f.select 'status[]', [[$statuses[1],1],[$statuses[2],2],[$statuses[3],3]] %>
                  </td>
                  <td><%= f.check_box 'checkbox[]' %></td>
                  <td><%= link_to "確認", user_path(a.applicant), class: "btn btn-primary" %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
            <% end %>
            <div class="center">
              <%= f.submit "変更を送信する", class: "btn btn-primary btn-lg sent-change" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <%= link_to "【勤怠変更申請のお知らせ】", "#" %><br>
    <%= link_to "【残業申請のお知らせ】", "#" %><br>
  <% end %>
  <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
  <%= link_to "CSVを出力", "#", class: "btn btn-primary" %><br>
  <%= link_to "勤怠修正ログ（承認済）", "#", class: "btn btn-primary" %>
<% end %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th rowspan="3">残業申請</th>
      <th rowspan="3">日付</th>
      <th rowspan="3">曜日</th>
      <th colspan="8">【実績】</th>
      <th colspan="5">所定外勤務</th>
    </tr>
    <tr>
      <th colspan="3">出社</th>
      <th colspan="3">退社</th>
      <th rowspan="2">在社時間</th>
      <th rowspan="2">備考</th>
      <th colspan="2">終了予定時間</th>
      <th rowspan="2">時間外時間</th>
      <th rowspan="2">業務処理内容</th>
      <th rowspan="2">指示者確認印</th>
    </tr>
    <tr>
      <th>時</th>
      <th>分</th>
      <th></th>
      <th>時</th>
      <th>分</th>
      <th></th>
      <th>時</th>
      <th>分</th>
    </tr>
  </thead>
  <tbody>
    <% @attendances.each do |day| %>
      <tr>
        <td>
          <% if current_user?(@user) %>
            <%= link_to "残業申請", "#", class: "btn btn-primary" %>
          <% end %>
        </td>
        <td><%= l(day.worked_on, format: :short) %></td>
        <td>
          <% if day.worked_on.wday == 0 %>
            <font color="red"><%= $week[day.worked_on.wday] %></font>
          <% elsif day.worked_on.wday == 6 %>
            <font color="blue"><%= $week[day.worked_on.wday] %></font>
          <% else %>
            <%= $week[day.worked_on.wday] %>
          <% end %>
        </td>
        <td><%= day.started_at.hour if day.started_at.present? %></td>
        <td><%= start_time(day.started_at).min if day.started_at.present? %></td>
        <td>
          <% if (day.worked_on == Date.current) && day.started_at.nil? && current_user?(@user) %>
            <%= link_to "出勤", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-block" %>
          <% end %>
        </td>
        <td><%= day.finished_at.hour if day.finished_at.present? %></td>
        <td><%= finish_time(day.finished_at).min if day.finished_at.present? %></td>
        <td>
          <% if day.started_at.present? && day.finished_at.nil? && current_user?(@user) %>
            <%= link_to "退勤", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-block" %>
          <% end %>
        </td>
        <td>
          <% if day.started_at.present? && day.finished_at.present? %>
            <%= str_times = worked_time(start_time(day.started_at), finish_time(day.finished_at)) %>
            <% @total_worked_time = @total_worked_time.to_f + str_times.to_f %>
          <% end %>
          </td>
        <td><%= day.note %></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
  <tfooter>
    <tr>
      <td colspan="8">総合勤務時間　：<%= format_basic_info(@user.basic_time).to_f * @worked_sum %></td>
      <td colspan="7">合計在社時間　：<%= format("%.2f", @total_worked_time.to_f) %></td>
      <td>
        所属長承認：<% if @status.status.blank? %>
                      <%= $statuses[0] %>
                    <% else %>
                      <%= $statuses[@status.status] %>
                    <% end %>
        <% if current_user?(@user) %>            
          <%= form_with(model: @request, url: requests_path(applicant: current_user, request_month: @first_day, category: 1), method: :post, local: true) do |f| %>
            <%= f.select :target, @users.pluck(:name), class: "form-control" %><br>
            <%= f.submit "申請", class: "btn btn-primary" %>
          <% end %>
        <% end %>
      </td>
    </tr>
  </tfooter>
</table>

